    "    describe('mounted', () => {",
    "      // write tests for all code inside the mounted hook of your component",
    "    });",
    "",
    "    describe('beforeDestroy', () => {",
    "      // write tests for all code inside the beforeDestroy hook of your component",
    "    });",
    "  });",
